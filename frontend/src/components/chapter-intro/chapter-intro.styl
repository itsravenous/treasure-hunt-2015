// Title
.chapter-intro h1
	text-align: center
	.number
		display: block

// Image "canvas"
.bg
	// Styles
	background-repeat: no-repeat
	background-position: 50% 10%
	background-size: contain

// Root
.chapter-intro
	// Layout
	position: relative
	display: flex
	align-items: center
	justify-content: center

	.bg
		position: absolute
		left: 0
		top: 0
		right: 0
		bottom: 0

	// State
	.bg
		opacity: 0
		transform: translateY(1em)
		transition: opacity 2s, transform 2s

	h1
		opacity: 0
		transform: translateY(2em)
		transition: opacity 3s, transform 3s

	&[data-state="ready"]
		.bg,
		h1
			opacity: 1
			transform: none
