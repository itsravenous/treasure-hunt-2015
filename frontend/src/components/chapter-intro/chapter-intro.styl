// Title
.chapter-intro h1
	text-align: center
	.number
		display: block

// Image "canvas"
.bg
	// Styles
	background-repeat: no-repeat
	background-position: 50% 10%
	background-size: contain

// Root
.chapter-intro
	// Layout
	position: relative
	display: flex
	flex-direction: column
	align-items: center
	justify-content: center

	.bg
		position: absolute
		left: 0
		top: 0
		right: 0
		bottom: 0

	.proceed-button
		position: relative

	// State
	.bg
		opacity: 0
		transform: translateY(1em)

	h1
		position relative
		opacity: 0
		transform: translateY(2em)

	.proceed-button
		position relative
		opacity: 0
		transform: translateY(2em)

	&[data-state="ready"]
		.bg
			transition: opacity 2s, transform 2s
		h1
			transition: opacity 3s, transform 3s
		.proceed-button
			transition: opacity 3s, transform 3s

		.bg,
		h1,
		.proceed-button
			opacity: 1
			transform: none
		.proceed-button
			transform: rotate(45deg)
